<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rvLayout"
        android:padding="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageUser"
            tools:src="@tools:sample/avatars"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:text="Username"
            android:textSize="12dp"
            android:textColor="#808080"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/imageUser"
            android:layout_toEndOf="@+id/imageUser"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Komen"
            android:id="@+id/saran"
            android:textSize="12sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/imageUser"
            android:layout_toEndOf="@+id/imageUser"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/username"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text=""
            android:id="@+id/waktu"
            android:textColor="#22821f"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/imageUser"
            android:layout_alignParentEnd="true"
            android:layout_alignEnd="@+id/imageUser"
            android:gravity="end"
            tools:ignore="RtlCompat" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_favorite_border_black_24dp"
            android:background="@android:color/transparent"
            android:id="@+id/suka"
            android:layout_toRightOf="@+id/imageUser"
            android:layout_toEndOf="@+id/imageUser"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/saran"
            tools:ignore="RtlCompat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/jumlahLike"
            android:textSize="10sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/suka"
            android:layout_toEndOf="@+id/suka"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/saran"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>